{% extends "base.html" %}
{% load static %}
{% block header %}Inventaires{% endblock %}
{% block site_wrapper %}

<div class="container-fluid">

    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar/brand" href="/"><h3>Prestigemikafriq</h3></a>
            </div>
            <ul class="nav navbar-nav">
                {% if request.user.is_authenticated %}
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Arrivages<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="#">Créer un arrivage</a></li>
                        <li><a href="#">Arrivages</a></li>
                        <li><a href="#">Liste des frais</a></li>
                    </ul>
                </li>
                {% endif %}
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Articles<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{% url "inventory:articles" %}" title="Liste des articles">Liste des articles</a></li>
                        {% if request.user.is_authenticated %}
                        <li><a href="{% url "inventory:article_create" %}" title="Saisir un article">Saisir un article</a></li>
                        <li><a href="#" title="Générer étiquettes avec pdflatex" target="_blank">Générer étiquettes</a></li>
                        {% endif %}
                    </ul>
                </li>
                        {% if request.user.is_authenticated %}
                <li class="dropdown">
                    <a class="dropdown-toggle" data-toggle="dropdown" href="#">Caisse<span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a href="{% url "cart:cart_content" %}">Contenu du panier</a></li>
                        <li><a href="{% url "cart:ventes"  %}">Ventes</a></li>
                        <li><a href="{% url "cart:clients" %}">Clients</a></li>
                        <li><a href="{% url "cart:client_create" %}">Ajouter un client</a></li>
                    </ul>
                </li>
                        {% endif %}
                <ul class="nav navbar-nav navbar-right">
                {% if request.user.is_authenticated %}
                    <li><a href="{% url "accounts:logout" %}"><span class="glyphicon glyphicon-user"></span> Logout</a></li>
                    <p class="navbar-text">En ligne: {{request.user.username}}</p>
                {% else %}
                    <li><a href="{% url "accounts:login" %}"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                </ul>
                {% endif %}
            </ul>
        </div>
    </nav>

        {% block content %}

        {% endblock %}
    <footer>
        <nav id="footernav">
            {% block footernav %}{% endblock %}
        </nav>
    </footer>
</div>
{% endblock %}
