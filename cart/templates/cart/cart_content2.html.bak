{% extends "base.html" %}
{% load humanize %}
{% load i18n %}
{% block content %}

<div class="container">
  <h3>{% trans "3ème étape" %}  <small>{% trans "step-by-step guide" %}</small></h3>
  <h4>{% trans "Saisir le prix de vente de l'article" %}</h4>


  <ol>
    <li>{% trans "Entrez le prix en éditant le champ de la colonne 'Modifier'" %}</li>
    <li>{% trans "Validez en cliquant sur le bouton 'Modifier'" %}</li>
    <li>[{% trans "S'il y a d'autres articles à ajouter au panier, recommencez à chercher ces articles." %}]</li>
    <li>{% trans "Allez au formulaire de vente en cliquant sur le bouton" %} </li>
  </ol>


  <div class="progress">
    <div class="progress-bar progress-bar-info" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"
         style="width:60%">
    60% {% trans "de la vente achevée" %}
    </div>
  </div>






<table class="table">
      <thead>
         <tr>
            <th>{% trans 'No' %}</th>
             <th>{% trans "Date d'ajout" %}</th>
             <th>{% trans "Action" %}</th>
            <th>{% trans "Titre" %}</th>
            <th>{% trans "Quantité disponible en stock" %}</th>
            <th>{% trans "Modifier la quantité" %}</th>
            <th>{% trans 'Prix' %}</th>
            <th>{% trans "Modifier" %}</th>
            <th>{% trans "Total" %}</th>
         </tr>
      </thead>

      <tbody>
      {% for item in cart %}
      <tr><td>{{ forloop.counter }}</td>
          <td>{{ item.date_added }}</td>
          <td>
              <form method="POST" action="{% url "cart:remove_item" item.article.pk  %}">
                {% csrf_token %}
                <input type="submit" class="btn btn-warning" value="{% trans "Supprimer du panier"%}"/>
              </form>
          </td>
          <td><a href="{% url "inventory:article_detail" item.article.pk %}">{{ item.article.name }}</a></td>
          <td title="{% trans "available quantity" %}">{{ item.article.quantity }}</td>

          <td>
            <form method="POST" action="{% url "cart:edit_quantity" item.pk %}">
            {% csrf_token %}
            {% if error_message %}
            <label onerror="{{ error_message }}" >{{error_message}}</label>
            <input id="new_quantity" type="number" value="{{ new_quantity }}" name="new_quantity">
            {% elif warning %}
            <label title="WARNING!!!">WARNING</label>
            <label onerror="{{ warning }}" >{{warning}}</label>
            <input id="new_quantity" type="number" value="{{ new_quantity }}" name="new_quantity">
            {% else %}
            <input id="new_quantity" title="Max: {{item.article.quantity}}" type="number" value="{{ item.quantity }}" name="new_quantity" >
            {% endif %}
            <input title="Add to quantity" type="submit" class="btn btn-success" value="{% trans "Modifier" %}"/>
            </form>
          </td>
          <td>{{ item.prix|intcomma }}</td>
          <td>
            <form method="POST" action="{% url "cart:edit_price" item.pk %}">
              {% csrf_token %}
              {% if error_message %}
              <label onerror="{{ error_message }}" >{{error_message}}</label>
              <input id="new_price" type="number" value="{{ new_price }}" name="new_price">
              {% else %}
              <input id="new_price" type="number" value="{% if new_price %}{{ new_price }}{% else %}{{ item.prix }}{% endif %}" name="new_price">
              {% endif %}


              <input type="submit" class="btn btn-success" value="{% trans "Modifier" %}"/>
              </form>
          </td>
          <td>{{ item.total }}</td>
      </tr>
      {% endfor %}
      <tr>
          <th colspan="6">{% trans "Total de votre panier:" %}</th>
          <td id="amount"><strong>{{ cart_total|intcomma }}</strong></td>
      </tr>

    </table>
{% if cart_total %}


<div class="container">
  <p><a class="btn btn-success" href="{% url "cart:checkout" %}">{% trans "Aller à la vente" %}</a> </p>
</div>


{% endif %}

{% endblock %}
